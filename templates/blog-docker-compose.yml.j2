version: "3.9"
services:
  app:
    image: "nginx:latest"
    restart: "unless-stopped"
    volumes:
      - "/etc/localtime:/etc/localtime:ro"
      - "/volumes/blog/config/dhparams.pem:/etc/nginx/dhparams.pem:ro"
      - "/volumes/blog/config/nginx.conf:/etc/nginx/nginx.conf:ro"
      - "/volumes/blog/config/privkey.pem:/etc/nginx/privkey.pem:ro"
      - "/volumes/blog/config/fullchain.pem:/etc/nginx/fullchain.pem:ro"
      - "/volumes/blog/config/chain.pem:/etc/nginx/chain.pem:ro"
      - "/volumes/blog/config/cert.pem:/etc/nginx/cert.pem:ro"
      - "/volumes/blog/content/:/www:ro"
      - "/volumes/blog/log/:/var/log/nginx:rw"
    ports:
      - 80:80
      - 443:443
